<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTravelId"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Viaje 777" />

    <TextView
        android:id="@+id/tvRouteName"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance"
        android:text="Trujillo - Lima" />

    <TextView
        android:id="@+id/tvDepartureDate"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_height="wrap_content"
        android:text="Programado para el 17/07/2017" />

    <TextView
        android:id="@+id/tvDepartureTime"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A las 16:30 horas"/>

    <Button
        android:id="@+id/btnStartTravel"
        android:textSize="24sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar viaje" />
    
    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="4dp" />

</LinearLayout>
